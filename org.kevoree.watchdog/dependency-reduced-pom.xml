<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>org.kevoree.watchdog.root</artifactId>
    <groupId>org.kevoree.watchdog</groupId>
    <version>0.25</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>org.kevoree.watchdog</artifactId>
  <name>kevoree.watchdog</name>
  <version>0.25</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <property />
                <property />
                <property />
                <echo />
                <echo />
                <echo />
                <echo />
                <echo />
                <echo />
                <echo />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.kevoree.watchdog.Runner</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.vafer</groupId>
        <artifactId>jdeb</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>jdeb</goal>
            </goals>
            <configuration>
              <verbose>true</verbose>
              <controlDir>${basedir}/src/deb/control</controlDir>
              <dataSet>
                <data>
                  <src>${project.build.directory}/${project.build.finalName}.jar</src>
                  <type>file</type>
                  <mapper>
                    <type>perm</type>
                    <prefix>/usr/share/kevoree/lib</prefix>
                    <user>kevoree</user>
                    <group>kevoree</group>
                  </mapper>
                </data>
                <data>
                  <type>link</type>
                  <symlink>true</symlink>
                  <linkName>/usr/share/java/kevoree.jar</linkName>
                  <linkTarget>/usr/share/kevoree/lib/${project.build.finalName}.jar</linkTarget>
                </data>
                <data>
                  <src>${basedir}/src/deb/init.d</src>
                  <type>directory</type>
                  <mapper>
                    <type>perm</type>
                    <prefix>/etc/init.d</prefix>
                    <user>kevoree</user>
                    <group>kevoree</group>
                  </mapper>
                </data>
                <data>
                  <src>${basedir}/src/deb/etc/kevoree</src>
                  <type>directory</type>
                  <mapper>
                    <type>perm</type>
                    <prefix>/etc/kevoree</prefix>
                    <user>kevoree</user>
                    <group>kevoree</group>
                  </mapper>
                </data>
                <data>
                  <type>template</type>
                  <paths>
                    <path>etc/kevoree</path>
                    <path>var/lib/kevoree</path>
                    <path>var/log/kevoree</path>
                    <path>var/run/kevoree</path>
                  </paths>
                  <mapper>
                    <type>perm</type>
                    <user>kevoree</user>
                    <group>kevoree</group>
                  </mapper>
                </data>
              </dataSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

